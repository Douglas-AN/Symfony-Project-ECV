{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}
	<h1>User index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Utilisateurs</th>
				{# <th>Lastname</th> #}
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>
						<figure class="fir-image-figure">
							<img class="fir-author-image fir-clickcircle" src="{{user.img}}" alt="David East - Author">
							<figcaption>
								<div class="fig-author-figure-title">{{user.lastname}}
									{{user.firstname}}</div>
								<div class="fig-author-figure-title">{{user.work}}</div>
							</figcaption>
						</figure>
					</td>
					<td>
						<a class="btn btn-dark" href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
						<a class="btn btn-primary" href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a class="btn btn-success" href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
